{
  "compilerOptions": {
    "target": "ESNEXT",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  }
}